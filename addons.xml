<addons>
    <addon id="palai103.dependencies" name="Palai103 Dependencies" provider-name="palai103"
        version="0.0.13">
        <requires>
            <import addon="repository.palai103" />
        </requires>
        <extension point="xbmc.python.module" library="resources/modules" />
        <extension point="xbmc.addon.metadata">
            <description lang="en">Dependencies required by all Palai103 add-ons</description>
            <reuselanguageinvoker>true</reuselanguageinvoker>
            <license></license>
            <language></language>
            <website></website>
            <assets>
                <icon>icon.png</icon>
                <fanart>fanart.jpg</fanart>
            </assets>
        </extension>
    </addon>
